{
    "name": "aguilarm/mika-aguilar",
    "description": "Personal website for Mika Aguilar",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Mika Aguilar",
            "email": "mika.aguilar@gmail.com"
        }
    ],
    "repositories": [
      {
        "type":"composer",
        "url":"https://packages.drupal.org/8"
      },
      {
          "type": "package",
          "package": {
              "name": "fortawesome/font-awesome",
              "version": "5.6.3",
              "type": "drupal-library",
              "dist": {
                  "url": "https://github.com/FortAwesome/Font-Awesome/releases/download/5.6.3/fontawesome-free-5.6.3-web.zip",
                  "type": "zip"
              }
          }
      },
      {
            "type": "package",
            "package": {
                "name": "ckeditor/codesnippet",
                "version": "4.11.1",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/codesnippet/releases/codesnippet_4.11.1.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "cweagans/composer-patches": "^1.6",
        "composer/installers": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "fortawesome/font-awesome": "^5.6",
        "drupal/core": "^8.6",
        "drush/drush": "^9.5",
        "drupal/health_check": "^1.0",
        "drupal/redis": "^1.1",
        "drupal/twig_tweak": "^2.1",
        "drupal/adminimal_theme": "^1.3",
        "drupal/adminimal_admin_toolbar": "^1.8",
        "drupal/pathauto": "^1.3",
        "drupal/metatag": "^1.7",
        "drupal/codesnippet": "^1.6",
        "ckeditor/codesnippet": "4.11.1"
    },
    "scripts": {
      "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
		},
		"extra" : {
			"installer-paths": {
				"docroot/core": ["type:drupal-core"],
				"docroot/libraries/{$name}": ["type:drupal-library"],
				"docroot/modules/contrib/{$name}": ["type:drupal-module"],
				"docroot/themes/contrib/{$name}": ["type:drupal-theme"]
			}
		}
}
